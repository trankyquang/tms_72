<% provide :title, t("course_title") %>

<%= provide :title_header, t("course.courses_management") %>
<section id="service" class = "admin-section">
  <div class="container">
    <div class="row">
      <%= render "admin/shared/title_header" %>
      <div class = "row margin-bot-20">
        <div class="form-group">
          <div class="col-md-4">
            <%= link_to new_admin_course_path, class: "btn btn-info" do %>
              <%= "Create New Course" %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="responsive-table">
        <table id="table_list"
          class="table table-striped table-bordered width-100" cellspacing="0">
          <thead>
            <tr>
              <th class = "text-center"><%= t "course.course_name" %></th>
              <th class = "text-center"><%= t "course.start_date" %></th>
              <th class = "text-center"><%= t "course.end_date" %></th>
              <th class = "text-center"><%= t "course.status" %></th>
              <th class="text-center" data-orderable="false"></th>
            </tr>
          </thead>
          
          <tbody>
            <% @courses.each do |course| %>
              <%= render "course", course: course %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
