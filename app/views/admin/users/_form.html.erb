<%= form_for [:admin, @admin_user], html: {multipart: true} do |f| %>
  <%= render "error_message", object: @admin_user %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t "characters_minimum" %>)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off",
      class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :role %></br>
    <%= show_select_option_role f %>
  </div>

  <div class="pictures">
    <p><%= f.label :avatar %></p>
    <p>
      <img id="img_prev" src="#" alt=t("your_image") class="img-thumbnail hidden"/>
    </p>
    <span class="btn btn-default btn-file">
      <%= f.file_field :avatar_url, id: "avatar-upload",
        accept: "image/png, image/gif, image/jpeg" %>
    </span>
  </div>

  <div class="actions">
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-actions" %>
  </div>
<% end %>
