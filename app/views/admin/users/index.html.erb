<% provide :title, t("users") %>

<h1><%= t "users" %></h1>

<div class="container">
  <div class="row">
    <%= form_tag admin_users_path, method: :get do %>
      <%= render "shared/search_form" %>
    <% end %>
  </div>
</div>

</br>
<div class="container">
  <p>
    <%= link_to new_admin_user_path, class: "btn btn-info" do %>
      <%= t "create_new_user" %>
      <span class="glyphicon glyphicon-plus"></span>
    <% end %>
  </p>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t "name" %></th>
          <th><%= t "email" %></th>
          <th><%= t "avatar" %></th>
          <th><%= t "role" %></th>
          <th><%= t "operation" %></th>
        </tr>
      </thead>
      <tbody>
        <% @admin_users.each do |admin_user| %>
          <tr>
            <td><%= admin_user.name %></td>
            <td><%= admin_user.email %></td>
            <td>
              <%= image_tag admin_user.avatar_url_url, alt: t("avatar_picture"),
                class: "img-index-user" %>
            </td>
            <td>
              <%= admin_user.role %>
            </td>
            <td>
              <% if admin_user.trainee? || admin_user.supervisor? %>
                <%= link_to t("edit"), edit_admin_user_path(admin_user),
                  class: "glyphicon glyphicon-edit" %> |
                <%= link_to t("delete"), admin_user_path(admin_user),
                  method: :delete, data: {confirm: t("are_you_sure")},
                  class: "glyphicon glyphicon-trash text-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="paginate-view">
      <%= paginate @admin_users, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
  </br>
</div>
