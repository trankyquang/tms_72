<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title_project"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to t("home_title"), root_path,
            class: "glyphicon glyphicon-home" %>
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to t("course_title"), "#",
              class: "glyphicon glyphicon-list" %>
          </li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle glyphicon glyphicon-cog",
              data: {toggle: "dropdown"} do %>
                <%= t "account" %><b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("profile"), edit_user_registration_path,
                    class: "glyphicon glyphicon-wrench" %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("logout"), destroy_user_session_path,
                    method: :delete, class: "glyphicon glyphicon-log-out" %>
                </li>
              </ul>
            </li>
          <% else %>
          <li>
            <%= link_to t("login"), new_user_session_path,
              class: "glyphicon glyphicon-log-in" %>
          </li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>
