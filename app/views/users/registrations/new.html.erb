<h1><%= t "sign_up" %></h1>

<%= form_for resource, as: resource_name,
  url: registration_path(resource_name) do |f| %>
  <%= render "shared/error_message_user", object: @user %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t "characters_minimum" %>)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off",
      class: "form-control" %>
  </div>

  <div class="pictures">
    <p><%= f.label :avatar %></p>
    <p>
      <img id="img_prev" src="#" alt=t("your_image") class="img-thumbnail hidden"/>
    </p>
    <span class="btn btn-default btn-file">
      <%= f.file_field :avatar_url, id: "avatar-upload",
        accept: "image/png, image/gif, image/jpeg" %>
      <%= f.hidden_field :avatar_url_cache %>
    </span>
  </div>

  <div class="actions">
    <%= f.submit t("sign_up"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
